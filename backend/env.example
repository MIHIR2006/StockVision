# StockVision Backend Environment Variables

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
ENVIRONMENT=development

# Database Configuration (for future use)
DATABASE_URL=postgresql://user:password@localhost:5432/stockvision
DATABASE_TEST_URL=postgresql://user:password@localhost:5432/stockvision_test

# Redis Configuration (for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# External APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
YAHOO_FINANCE_API_KEY=your_yahoo_finance_api_key
POLYGON_API_KEY=your_polygon_api_key
FINNHUB_API_KEY=your_finnhub_api_key

# Security
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://stockvision.vercel.app

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/stockvision.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000 