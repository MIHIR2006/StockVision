    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/next-auth": "^3.13.0",
    "concurrently": "^8.2.2",
    "turbo": "^2.5.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
